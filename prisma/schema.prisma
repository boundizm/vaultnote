// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id              String   @id @default(cuid())
  titleEncrypted  String?
  ciphertext      String
  iv              String
  remainingReads  Int?
  expiresAt       DateTime?
  createdAt       DateTime @default(now())
  consumedAt      DateTime?
  destroyToken    String?  @unique
  isProtected     Boolean? @default(false)
  encryptedKey    String?
  keyIv           String?
  salt            String?
  images          String? // JSON string of array: {name: string, data: string, size: number}[]

  // Author information (encrypted)
  authorNameEncrypted  String?
  authorEmailEncrypted String?

  // View tracking
  viewCount       Int      @default(0)
  maxViews        Int?

  @@index([expiresAt])
}
